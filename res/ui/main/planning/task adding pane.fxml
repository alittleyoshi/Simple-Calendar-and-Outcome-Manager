<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<fx:root type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0" style="-fx-background-radius: 7;">
                    <children>
                        <Label text="新的任务">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Label>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="标题" />
                                <TextField fx:id="_taskAddingTitleText" promptText="一个容易记忆的标题" />
                            </children>
                        </HBox>
                        <Label text="描述" />
                        <TextArea fx:id="_taskAddingDescriptionText" promptText="对这个任务的描述和解释" />
                        <Label text="开始时间" />
                        <DatePicker fx:id="_taskAddingStartDate" editable="false" promptText="开始时间" />
                        <Label text="结束时间" />
                        <DatePicker fx:id="_taskAddingEndDate" editable="false" promptText="结束时间" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </children></StackPane>
        <HBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onCancellingTaskAction" prefHeight="40.0" prefWidth="80.0" text="取消" />
                <Button mnemonicParsing="false" onAction="#onCreatingTaskAction" prefHeight="40.0" prefWidth="80.0" text="创建" />
            </children>
        </HBox>
    </children>
</fx:root>
