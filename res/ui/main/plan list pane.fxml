<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import ui.main.planning.*?>

<?import ui.main.TaskListPane?>
<fx:root type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="TOP_CENTER">
                    <children>
                        <ScrollPane hbarPolicy="NEVER" style="-fx-background-insets: 0;" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="_planListBox" />
                            </content>
                        </ScrollPane>
                        <Separator />
                  <AnchorPane>
                     <children>
                              <Button mnemonicParsing="false" onAction="#onPlanAddingAction" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
                           <graphic>
                                        <VBox id="planItem" alignment="CENTER" spacing="5.0">
                                            <children>
                                                <Label text="新的计划" />
                                                <Label text="创建一个新的计划" textFill="#000000b2">
                                                    <font>
                                                        <Font size="10.0" />
                                                    </font>
                                    </Label>
                                            </children>
                                            <padding>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                            </padding>
                                        </VBox>
                           </graphic>
                              </Button>
                     </children>
                  </AnchorPane>
                    </children>
                </VBox>
                <AnchorPane HBox.hgrow="ALWAYS">
                    <children>
                        <PlanAddingPane fx:id="_planAddingPane" onCancelling="#onCancellingPlanAction" onCreating="#onCreatingPlanAction" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                        <TaskListPane fx:id="_taskListPane" onAdding="#onAddingTaskAction" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                        <TaskAddingPane fx:id="_taskAddingPane" onCancelling="#onCancellingTaskAction" onCreated="#onCreatingTaskAction" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                    </children>
                </AnchorPane>
            </children></HBox>
    </children>
</fx:root>
