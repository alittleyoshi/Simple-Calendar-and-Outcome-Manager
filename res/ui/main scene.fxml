<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.MainSceneController">
   <children>
      <HBox nodeOrientation="RIGHT_TO_LEFT" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <AnchorPane nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <AnchorPane fx:id="_planningPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <VBox alignment="TOP_CENTER">
                                 <children>
                                    <ScrollPane style="-fx-background-insets: 0;" VBox.vgrow="ALWAYS">
                                       <content>
                                          <VBox fx:id="_planListBox" />
                                       </content>
                                    </ScrollPane>
                                    <Separator />
                                    <AnchorPane focusTraversable="true">
                                       <children>
                                          <VBox alignment="TOP_CENTER" onMouseClicked="#onPlanAddingAction" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                             <children>
                                                <VBox id="planItem" alignment="CENTER" spacing="5.0">
                                                   <children>
                                                      <Label text="新的任务" />
                                                      <Label text="创建一个新的任务" textFill="#000000b2" />
                                                   </children>
                                                   <padding>
                                                      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                                   </padding>
                                                </VBox>
                                             </children>
                                             <padding>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                             </padding>
                                          </VBox>
                                       </children>
                                    </AnchorPane>
                                 </children>
                              </VBox>
                              <AnchorPane HBox.hgrow="ALWAYS">
                                 <children>
                                    <AnchorPane fx:id="_taskPane" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <children>
                                          <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                             <children>
                                                <AnchorPane>
                                                   <children>
                                                      <Label fx:id="_planTitleLabel" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                         <padding>
                                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                         </padding>
                                                      </Label>
                                                   </children>
                                                </AnchorPane>
                                                <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-insets: 0;" VBox.vgrow="ALWAYS">
                                                   <content>
                                                      <VBox fx:id="_planTasksBox" spacing="10.0">
                                                         <padding>
                                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                         </padding>
                                                      </VBox>
                                                   </content>
                                                </ScrollPane>
                                             </children>
                                          </VBox>
                                          <Button mnemonicParsing="false" onAction="#onTaskAddingAction" prefHeight="30.0" prefWidth="30.0" text="+" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" />
                                       </children></AnchorPane>
                                    <AnchorPane fx:id="_taskAddingPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <children>
                                          <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                             <children>
                                                <VBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0" style="-fx-background-radius: 7;">
                                                   <children>
                                                      <Label text="新的任务">
                                                         <font>
                                                            <Font size="20.0" />
                                                         </font>
                                                      </Label>
                                                      <Label text="标题" />
                                                      <TextField fx:id="_taskAddingTitleText" promptText="一个容易记忆的标题" />
                                                      <Label text="描述" />
                                                      <TextArea fx:id="_taskAddingDescriptionText" promptText="对这个任务的描述和解释" />
                                                      <Label text="开始时间" />
                                                      <DatePicker fx:id="_taskAddingStartDate" editable="false" promptText="开始时间" />
                                                      <Label text="结束时间" />
                                                      <DatePicker fx:id="_taskAddingEndDate" editable="false" promptText="结束时间" />
                                                   </children>
                                                   <padding>
                                                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                   </padding>
                                                </VBox>
                                             </children></StackPane>
                                          <HBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
                                             <children>
                                                <Button mnemonicParsing="false" onAction="#onCancellingTaskAction" prefHeight="40.0" prefWidth="80.0" text="取消" />
                                                <Button mnemonicParsing="false" onAction="#onCreatingTaskAction" prefHeight="40.0" prefWidth="80.0" text="创建" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </AnchorPane>
                                    <AnchorPane fx:id="_planAddingPane" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <children>
                                          <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                             <children>
                                                <VBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0" style="-fx-background-radius: 7;">
                                                   <children>
                                                      <Label text="新的计划">
                                                         <font>
                                                            <Font size="20.0" />
                                                         </font>
                                                      </Label>
                                                      <HBox spacing="10.0">
                                                         <children>
                                                            <Label text="标题" />
                                                            <Label text="请输入标题" textFill="RED" visible="false" />
                                                         </children>
                                                      </HBox>
                                                      <TextField fx:id="_planAddingTitleText" promptText="一个容易记忆的标题" />
                                                      <Label text="描述" />
                                                      <TextArea fx:id="_planAddingDescriptionText" promptText="对这个计划的描述和解释" />
                                                      <Label text="开始时间" />
                                                      <DatePicker fx:id="_planAddingStartDate" editable="false" promptText="开始时间" />
                                                      <Label text="结束时间" />
                                                      <DatePicker fx:id="_planAddingEndDate" editable="false" promptText="结束时间" />
                                                   </children>
                                                   <padding>
                                                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                   </padding>
                                                </VBox>
                                             </children></StackPane>
                                          <HBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
                                             <children>
                                                <Button mnemonicParsing="false" onAction="#onCancellingPlanAction" prefHeight="40.0" prefWidth="80.0" text="取消" />
                                                <Button mnemonicParsing="false" onAction="#onCreatingPlanAction" prefHeight="40.0" prefWidth="80.0" text="创建" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </AnchorPane>
                                 </children>
                              </AnchorPane>
                           </children></HBox>
                     </children></AnchorPane>
                  <AnchorPane fx:id="_calendarPane" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <ListView prefWidth="150.0" />
                           </children></HBox>
                     </children></AnchorPane>
                  <AnchorPane fx:id="_settingPane" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
            <VBox>
               <children>
                  <VBox VBox.vgrow="ALWAYS">
                     <children>
                        <ToggleButton mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" selected="true" text="计划" userData="$_planningPane">
                           <toggleGroup>
                              <ToggleGroup fx:id="_tabButtonGroup" />
                           </toggleGroup>
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="10.0" />
                           </VBox.margin></ToggleButton>
                        <ToggleButton mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="日历" toggleGroup="$_tabButtonGroup" userData="$_calendarPane">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin></ToggleButton>
                     </children>
                  </VBox>
                  <ToggleButton mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="设置" toggleGroup="$_tabButtonGroup" userData="$_settingPane">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin></ToggleButton>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
